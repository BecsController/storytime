<div class="is-size-2 is-info has-text-centered">Update your profile</div>

<div class="columns">
  <div class="column is-6 is-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :first_name, class: "is-size-5 is-pulled-left" %>
      <%= f.text_field :first_name, class: "input is-fullwidth is-rounded is-medium" %>

      <%= f.label :last_name, class: "is-size-5 is-pulled-left" %>
      <%= f.text_field :last_name, class: "input is-fullwidth is-rounded is-medium" %>

      <%= f.label :email, class: "is-size-5 is-pulled-left" %>
      <%= f.email_field :email, class: "input is-fullwidth is-rounded is-medium" %>

      <%= f.label :password, class: "is-size-5 is-pulled-left" %>
      <%= f.password_field :password, class: "input is-fullwidth is-rounded is-medium" %>

      <%= f.label :password_confirmation, "Confirmation", class: "is-size-5 is-pulled-left" %>
      <%= f.password_field :password_confirmation, class: "input is-fullwidth is-rounded is-medium" %>

      <%= f.submit "Save changes", class: "button is-info is-rounded is-medium is-fullwidth is-outlined bottomLink" %>
    <% end %>

  </div>
</div>
