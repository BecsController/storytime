<h1 class="has-text-centered is-size-1 has-text-link">Log in</h1>

<div class="columns">
  <div class="column is-6 is-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :email, class: "is-size-5 is-pulled-left" %>
      <%= f.email_field :email, class: "input is-medium is-fullwidth is-rounded" %>

      <%= f.label :password, class: "is-size-5 is-pulled-left" %>
      <%= f.password_field :password, class: "input is-medium is-fullwidth is-rounded" %>

      <%= f.submit "Log in", class: "button is-info is-rounded is-medium is-fullwidth is-outlined bottomLink" %>
    <% end %>

    <p class="bottomLink">New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
